<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xmx100m -classpath %classpath de.locked.weatherstation.MainApp --temperature-csv=data/temperature.csv -ea --humidity-csv=data/humidity.csv --barometer-csv=data/barometer.csv --ambientlight-csv=data/ambientlight.csv</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Xmx100m -classpath %classpath de.locked.weatherstation.MainApp --temperature-csv=data/temperature.csv -ea --humidity-csv=data/humidity.csv --barometer-csv=data/barometer.csv --ambientlight-csv=data/ambientlight.csv</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xmx100m -classpath %classpath de.locked.weatherstation.MainApp --temperature-csv=data/temperature.csv -ea --humidity-csv=data/humidity.csv --barometer-csv=data/barometer.csv --ambientlight-csv=data/ambientlight.csv</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    </actions>
